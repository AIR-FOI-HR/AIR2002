<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tools2="http://schemas.android.com/apk/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/MainMenuTheme"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/relativeLayoutNaslov"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp">


    <TextView
        android:id="@+id/text3"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/choose_mode"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:textSize="50dp"
        android:fontFamily="@font/indigo_daisy"
        android:layout_margin="8dp"
        />

        <ImageButton
            android:id="@+id/aboutUs_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/info_black"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutNaslov"
        >


        <Button
            android:id="@+id/goToSingleplayerButton"
            style="@style/MainMenuTheme.Button"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:background="@drawable/bg_main_menu_1"
            android:gravity="center"
            android:text="@string/singleplayer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/singleplayer_icon_yellow" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/multiplayer_icon"
            />

        <Button
            android:id="@+id/goToMultiplayerButton"
            style="@style/MainMenuTheme.Button"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:background="@drawable/bg_main_menu_1"
            android:gravity="center"
            android:text="@string/multiplayer"
            android:layout_alignParentRight="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52" />


    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>